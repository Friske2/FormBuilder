[
    {
        "code": "cardHolderName",
        "is": "input",
        "label": {
            "text": "Card Holder Name",
            "position": "left"
        },
        "props": {
            "placeholder": "Enter Card Holder",
            "desc": null
        },
        "rules": [
            {
                "required": true,
                "message": "Please input Card Holder",
                "trigger": "change"
            }
        ]
    },
    {
        "code": "cardNumber",
        "is": "custom-input",
        "label": {
            "text": "Card Number",
            "position": "left"
        },
        "props": {
            "placeholder": "Enter Card Number",
            "desc": null,
            "cleave": {
                "creditCard": true
            }
        },
        "rules": [
            {
                "required": true,
                "message": "Please input Card Number",
                "trigger": "change"
            }
        ]
    },
    {
        "label": {
            "text": "Expiry Date",
            "position": "left"
        },
        "rules": [
            {
                "required": true,
                "message": ""
            }
        ],
        "is": "col",
        "code": "expiryDate",
        "props": {},
        "children": [
            {
                "code": "expiryDate",
                "is": "custom-input",
                "span": 10,
                "props": {
                    "placeholder": "MM / YY",
                    "style": {
                        "width": "200px"
                    },
                    "cleave": {
                        "date": true,
                        "datePattern": [
                            "m",
                            "y"
                        ]
                    }
                },
                "rules": [
                    {
                        "type": "date",
                        "required": true,
                        "message": "Please pick a date",
                        "trigger": "change"
                    }
                ]
            },
            {
                "is": "span",
                "span": 4,
                "code": "to",
                "props": {
                    "content": "",
                    "style": {
                        "textAlign": "center",
                        "width": "10px"
                    }
                },
                "rules": []
            },
            {
                "code": "cvv",
                "is": "input",
                "span": 10,
                "props": {
                    "placeholder": "Enter CVV",
                    "maxlength": 3,
                    "showWordLimit": true
                },
                "rules": [
                    {
                        "required": true,
                        "message": "Please input cvv",
                        "trigger": "change"
                    }
                ]
            }
        ]
    }
]